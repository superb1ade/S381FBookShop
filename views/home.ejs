         <div class="row">
             <p>Search Hotel:
             <label for="bar"><span class="glyphicon glyphicon-search"></span></label><input style="width:100%" type="text" id="myInput" onkeyup="myFunction()" placeholder="Search name:" name="bar"><br></p>
             <table id="myTable" class="table table-striped table-bordered table-hover table-scroll">
                 <thead><tr class="table-danger"><th>Hotel Name</th></tr></thead>
                 <tbody style='height:300px;display:block;overflow:scroll'>
                     <% for (var r of inventory) {%>
                         <tr>
                             <td><a href="/details?_id=<%= r._id %>"><%= r.name %></a></td>
                             <td style="display:none;"><%= r.web></td>
                             <td style="display:none;"><%= r.quantity%></td>
                         </tr>
                     <% } %>
                 </tbody>
             </table>
         </div>
